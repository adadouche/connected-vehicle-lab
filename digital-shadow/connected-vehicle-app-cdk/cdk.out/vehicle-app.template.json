{
  "Resources": {
    "cognitoIdentityPool": {
      "Type": "AWS::Cognito::IdentityPool",
      "Properties": {
        "AllowUnauthenticatedIdentities": true,
        "IdentityPoolName": {
          "Fn::Join": [
            "",
            [
              "-identity-pool-",
              {
                "Ref": "AWS::AccountId"
              }
            ]
          ]
        }
      },
      "Metadata": {
        "aws:cdk:path": "vehicle-app/cognitoIdentityPool"
      }
    },
    "unauthenticatedRole1D86C99A": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": "sts:AssumeRoleWithWebIdentity",
              "Condition": {
                "StringEquals": {
                  "cognito-identity.amazonaws.com:aud": {
                    "Ref": "cognitoIdentityPool"
                  }
                },
                "ForAnyValue:StringLike": {
                  "cognito-identity.amazonaws.com:amr": "unauthenticated"
                }
              },
              "Effect": "Allow",
              "Principal": {
                "Federated": "cognito-identity.amazonaws.com"
              }
            }
          ],
          "Version": "2012-10-17"
        }
      },
      "Metadata": {
        "aws:cdk:path": "vehicle-app/unauthenticatedRole/Resource"
      }
    },
    "unauthenticatedRoleDefaultPolicyE1D537BD": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyDocument": {
          "Statement": [
            {
              "Action": [
                "iot:Connect",
                "iot:Subscribe",
                "iot:Receive",
                "iot:GetThingShadow",
                "iot:UpdateThingShadow"
              ],
              "Effect": "Allow",
              "Resource": "*"
            }
          ],
          "Version": "2012-10-17"
        },
        "PolicyName": "unauthenticatedRoleDefaultPolicyE1D537BD",
        "Roles": [
          {
            "Ref": "unauthenticatedRole1D86C99A"
          }
        ]
      },
      "Metadata": {
        "aws:cdk:path": "vehicle-app/unauthenticatedRole/DefaultPolicy/Resource"
      }
    },
    "cognitoIdentityPoolRoleAttachment": {
      "Type": "AWS::Cognito::IdentityPoolRoleAttachment",
      "Properties": {
        "IdentityPoolId": {
          "Ref": "cognitoIdentityPool"
        },
        "Roles": {
          "unauthenticated": {
            "Fn::GetAtt": [
              "unauthenticatedRole1D86C99A",
              "Arn"
            ]
          }
        }
      },
      "Metadata": {
        "aws:cdk:path": "vehicle-app/cognitoIdentityPoolRoleAttachment"
      }
    }
  },
  "Outputs": {
    "identityPoolId": {
      "Description": "Identity Pool Id",
      "Value": {
        "Ref": "cognitoIdentityPool"
      }
    },
    "unauthenticatedRoleArn": {
      "Description": "Unauthenticated Role",
      "Value": {
        "Fn::GetAtt": [
          "unauthenticatedRole1D86C99A",
          "Arn"
        ]
      }
    }
  }
}